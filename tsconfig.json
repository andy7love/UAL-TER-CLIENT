{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es5",
			"es6",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"*": [
				"./typings/*",
				"./node_modules/@typeless/*",
				"./src/*"
			]
		}
	},
	"include": [
		"./src/**/*"
	]
}
